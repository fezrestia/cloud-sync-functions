  "main": "dst/entry.js",
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "~8.12.0",
    "firebase-functions": "^3.6.1",
    "puppeteer": "^3.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/puppeteer": "^2.0.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "private": true,
  "engines": {
    "node": "10"
  }
}
